<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Comunidad de Práctica</title>
    <link href="~/Content/images/brand.png" type="image/x-icon" rel="icon" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    @Scripts.Render("~/Scripts/jquery-3.4.1/bundles")
    @Scripts.Render("~/Scripts/bootstrap-4.5.2/bundles")
    @Scripts.Render("~/Scripts/select2/bundles")
    @Scripts.Render("~/Scripts/clickeable/bundles")

    @Scripts.Render("~/Scripts/jquery-validate/bundles")

    @Styles.Render("~/Content/css/bootstrap-4.5.2/bundles")
    @Styles.Render("~/Content/css/select2/bundles")

    @Styles.Render("~/Content/css/bundles")
    @Styles.Render("~/Content/fonts/bundles")
</head>
<body class="theme-green-lucy">

    <nav class="navbar navbar-expand-lg bg-light navbar-light fixed-top nav-shadow">

        <a class="navbar-brand" href="@Url.Action("Portada", "Comunidad")">
            <img runat="server" src="~/Content/images/brand.png" alt="" href>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					@Html.ActionLink("NOTICIAS", "listadoDeNoticias", "Noticia", null, new { @class = "nav-link font-weight-bold" })
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link font-weight-bold dropdown-toggle" href="#" id="dropdownCursos" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						CURSOS
					</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @if (ComunidadPractica.Controllers.AutorizacionController.tengoPermiso(HttpContext.Current,
                        ComunidadPractica.Handlers.SesionHandler.Permiso.CursoProponer))
                        {
                            @Html.ActionLink("Proponer curso", "proponerUnCurso", "Curso", null, new { @class = "dropdown-item" })
                        }
                        @if (ComunidadPractica.Controllers.AutorizacionController.tengoPermiso(HttpContext.Current,
                        ComunidadPractica.Handlers.SesionHandler.Permiso.CursoAprobar))
                        {
                            @Html.ActionLink("Aprobar cursos", "aprobarCursos", "Curso", null, new { @class = "dropdown-item" })
                        }
                        @if (ComunidadPractica.Controllers.AutorizacionController.tengoPermiso(HttpContext.Current,
                        ComunidadPractica.Handlers.SesionHandler.Permiso.CursoCrear))
                        {
                            @Html.ActionLink("Crear curso", "crearCurso", "Curso", null, new { @class = "dropdown-item" })
                        }
                        @Html.ActionLink("Listado de cursos", "listadoDeCursos", "Curso", null, new { @class = "dropdown-item" })
                    </div>
				</li>
                @if (ComunidadPractica.Controllers.AutorizacionController.tengoPermiso(HttpContext.Current,
                     ComunidadPractica.Handlers.SesionHandler.Permiso.EncuestaVerListado))
                 {
                        <li class="nav-item dropdown">
					    <a class="nav-link font-weight-bold dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						    ENCUESTAS
					    </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @if (ComunidadPractica.Controllers.AutorizacionController.tengoPermiso(HttpContext.Current,
                            ComunidadPractica.Handlers.SesionHandler.Permiso.EncuestaCrear))
                            {
                                @Html.ActionLink("Crear nueva encuesta", "crearEncuesta", "Encuesta", null, new { @class = "dropdown-item" })
                            }

                        

                            @Html.ActionLink("Ver todas las encuestas", "listadoDeEncuestas", "Encuesta", null, new { @class = "dropdown-item" })
                        </div>
				    </li>    
                 }
				
				<li class="nav-item">
					@Html.ActionLink("MIEMBROS", "listadoDeMiembros", "Miembro", null, new { @class = "nav-link font-weight-bold" })
				</li>
			</ul>

			<ul class="navbar-nav">

				@Html.Partial("Layout/SessionNav")

			</ul>

		</div>
    </nav>

	@Html.Partial("Layout/LoginModal")

    <div class="bg-white">
        @RenderBody()
        <script>runClickeable()</script>
        <br><br>
    </div>
    <div class="bg-pallete5">
        <div class="container body-content">
            <footer class="page-footer font-small pt-4 text-white text-center align-content-center">
                <h5 class="text-uppercase">¿Desea unirse a esta comunidad? Escríbanos</h5>
                <p>Puede contactar con un administrador: @Html.Action("obtenerCorreoDuennoProducto", "Comunidad")</p>
            </footer>
        </div>
    </div>

</body>
</html>
